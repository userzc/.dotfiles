!! URxvt Appearance

URxvt.font: xft:Monoisome:style=Regular:size=8
URxvt.boldFont: xft:Monoisome:style=Bold:size=8
URxvt.italicFont: xft:Monoisome:style=Italic:size=8
URxvt.boldItalicfont: xft:Monoisome:style=Bold Italic:size=8
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 2
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false


!! copy & paste in rxvt
! https://unix.stackexchange.com/a/329556
! https://wiki.archlinux.org/index.php/rxvt-unicode#Cut_and_paste (not so helpful link)
URxvt.perl-ext-common: default,clipboard,font-size
URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.iso14755: false

