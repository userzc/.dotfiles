# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# flaoting point moving mode
# https://faq.i3wm.org/question/2787/move-floating-window-with-arrows/
mode "move-floating" {
     # Using Arrows
     bindsym Up move up 10px
     bindsym Left move left 10px
     bindsym Down move down 10px
     bindsym Right move right 10px

     # Using home row
     bindsym j move left
     bindsym k move down
     bindsym l move up
     bindsym ntilde move right
     bindsym ntilde move right

     bindsym $mod+m mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+m focus floating; mode "move-floating"

# focus the parent container
bindsym $mod+a focus parent

