# mpd / mpc
bindcode $mod+34 exec --no-startup-id mpc toggle  # [
bindcode $mod+35 exec --no-startup-id mpc next    # ]
# bindsym $mod+p exec --no-startup-id notify-send "$(mpc -f "%artist% - %title%[ ([%album% ][%date%])]" | head -2)"
# bindsym $mod+o exec --no-startup-id notify-send "$(mpc playlist -f "%position%> %artist% - %title%" | head -9)"

# volume control
# https://faq.i3wm.org/question/125/how-to-change-the-systems-volume/
set $current_sink `pactl list short sinks | grep RUNNING | cut -f1`
# https://faq.i3wm.org/question/3747/enabling-multimedia-keys/
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $current_sink +5% # increase sound volume
# bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -- -5% # original: decrease sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume $current_sink -5% # working: decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute $current_sink toggle # mute sound
# playerctl: https://github.com/acrisci/playerctl
# check for the releases page: https://github.com/acrisci/playerctl/releases
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym Control+XF86AudioPlay exec "unity-control-center sound"
bindsym Control+XF86AudioPlay exec pavucontrol

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness
bindsym Shift+XF86AudioRaiseVolume exec xbacklight -inc 10 # increase screen brightness
bindsym Shift+XF86AudioLowerVolume exec xbacklight -dec 10 # decrease screen brightness

# Pomodoro
bindsym $mod+Shift+p exec gnome-pomodoro --pause-resume
bindsym $mod+Shift+Control+p exec gnome-pomodoro --start-stop

# ----------

# Use dropbox instead, u1 went down
exec dropbox start

# Use command line tool to change network conections.  Consider using
# command `nmcli dev wifi` para listar las conecciones disponibles:
# http://www.linux-commands-examples.com/nmcli
bindsym $mod+n exec "nmcli dev wifi rescan 2>/dev/null || ( sleep 1 && nmcli -t -f ssid,device,rate,signal,bars dev wifi | awk_print_quotes | dmenu -l 10 -i -fn $fn -nb $color_nb -nf $color_nf -sb $color_sb -sf $color_sf | awk_get_quotes | xargs nmcli connection up id )"

