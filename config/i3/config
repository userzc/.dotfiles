# Opciones a considearar para cambiar colores

# -fn font
#        defines the font or font set used.
# -nb color
#        defines the normal background color.  #RGB, #RRGGBB, and color names are supported.
# -nf color
#        defines the normal foreground color.
# -sb color
#        defines the selected background color.
# -sf color
#        defines the selected foreground color.

# colors from ~/.emacs.d/elpa/monokai-theme-20130703.1811/monokai-theme.el
# set $color_nf '#89BDFF'
set $color_nf '#66D9EF'
set $color_nb '#49483E'
# set $color_sf '#FD971F'
set $color_sf '#F92672'
set $color_sb '#171A0B'
# # So far I can't load the apropiarte fonts
set $fn 'pango:DejaVu Sans Mono 9'
# set $fn 'Meslo LG S for Powerline RegularForPowerline'

# quickswitch https://github.com/proxypoke/quickswitch-for-i3
# bindsym $mod+Tab exec quickswitch.py
bindsym $mod+Tab exec quickswitch.py -d "dmenu -i -b -l 20 -nb $color_nb -nf $color_nf -sb $color_sb -sf $color_sf"

bindsym $mod+Shift+Tab exec quickswitch.py -m -d "dmenu -b -l 20 -i -nb $color_nb -nf $color_nf -sb $color_sb -sf $color_sf"

# Scratchpad configuration
# http://i3wm.org/docs/userguide.html#_scratchpad
bindsym $mod+Shift+minus move scratchpad
