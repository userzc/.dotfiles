{
    "default_module": "powerline.segments.common",
    "segment_data": {
        "uptime": {
            "before": "⇑  "
        },
        "date": {
            "before": "⌚ "
        }
    },
    "segments": {
        "right": [
            {
                "name": "uptime",
                "priority": 50
            },
            {
                "name": "system_load",
                "priority": 50
            },
            {
                "name": "date"
            },
            {
                "name": "date",
                "args": {
                    "format": "%H:%M",
                    "istime": true
                }
            },
            {
                "name": "weather",
                "priority": 50,
                "args": {
                    "unit": "C",
                    "location_query": "oaxaca, mexico"
                }
            },
            {
                "name": "hostname"
            }
        ]
    }
}
